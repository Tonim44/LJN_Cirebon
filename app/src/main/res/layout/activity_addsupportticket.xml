<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4EF"
    tools:context="id.adiva.invoices.SubcriptionListActivity">

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F79216">

        <ImageView
            android:id="@+id/addsupportticket_back"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:src="@mipmap/arrow_backward" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/addsupportticket_back"
            android:fontFamily="@font/andika_new_basic"
            android:text="Support Ticket"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/andika_new_basic"
            android:text="Judul"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/judul"
            style="@style/Rectanggle3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white">

            <EditText
                android:id="@+id/insert_judul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/andika_new_basic"
                android:textColorHint="#757575"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_departemen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_judul"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/andika_new_basic"
            android:text="Departermen"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/departemen"
            style="@style/Rectanggle3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/judul"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:id="@+id/pilih"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@mipmap/poligon"></RelativeLayout>

            <TextView
                android:id="@+id/get_departement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_judul"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="Pilih"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_prioitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_departemen"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/andika_new_basic"

            android:text="Prioitas"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/prioitas"
            style="@style/Rectanggle3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/departemen"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white">

            <Spinner
                android:id="@+id/spinner_prioitas"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="@mipmap/poligon" />

            <TextView
                android:id="@+id/pilih_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="Priority"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_priotas"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/andika_new_basic"
            android:text="Pesan"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pesan"
            style="@style/Rectanggle3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/prioitas"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white">

            <EditText
                android:id="@+id/insert_pesan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="top"
                android:fontFamily="@font/andika_new_basic"
                android:textColorHint="#757575"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_kirim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/pesan"
            android:background="@drawable/button_shape"
            android:text="Kirim"
            android:textColor="#FDFCFC" />
    </LinearLayout>
</RelativeLayout>
