<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/shadow"/>
    <item>
        <shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
            <solid
                android:color="#F79216"
                ></solid>

            <stroke
                android:width="2dp"
                android:color="#590C0C0C"
                ></stroke>

            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:top="5dp"
                ></padding>
            <corners
                android:radius="11dp"
                ></corners>
        </shape>
    </item>
</layer-list>